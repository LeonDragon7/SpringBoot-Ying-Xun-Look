<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dragon.mapper.VideoMapper">
    <!-- 根据随机类型查询视频数据 -->
    <select id="getVideoByDynamic" resultType="com.dragon.vo.VideoReRmVo" parameterType="java.util.Map">
        select * from video
        <where>
            <if test="categoryName != null">
                and categoryName = #{categoryName}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="isDeleted != null">
                and isDeleted = #{is_deleted}
            </if>
        </where>
        order by year limit 0,5
    </select>

    <!-- 根据用户标签查询视频 -->
    <select id="getVideoByUserTag" parameterType="java.util.Map" resultType="com.dragon.entity.Video">
        select * from video v join user u on u.id = v.user_id
        <where>
            <if test="soleTag != null">
                and u.sole_tag = #{soleTag}
            </if>
            <if test="categoryName != null">
                and v.category_name = #{categoryName}
            </if>
        </where>
        limit #{size}
    </select>

    <!-- 动态条件分页查询 -->
    <select id="pageList" parameterType="java.util.Map" resultType="com.dragon.vo.VideoVo">
        select * from video v join screen_flicker.user_video uv on v.id = uv.video_id
        <where>
            <if test = "title != null and title != ''">
                and title like concat('%',#{title},'%')
            </if>
            <if test = "categoryName != null and categoryName != ''">
                and category_name like concat('%',#{categoryName},'%')
            </if>
            <if test = "price != null and price != ''">
                and price like concat('%',#{price},'%')
            </if>
            <if test = "type != null and type != ''">
                and type like concat('%',#{type},'%')
            </if>
            <if test = "year != null and year != ''">
                and year like concat('%',#{year},'%')
            </if>
            <if test = "region != null and region != ''">
                and region like concat('%',#{region},'%')
            </if>
            <if test = "weekTag != null and weekTag == 1">
                # 时间播放字段  本周热播字段
                <if test="begin != null">
                    and play_time &gt; #{begin}
                </if>
                <if test="end != null">
                    and play_time &lt; #{end}
                </if>
            </if>
            <choose>
                <when test = "historyTag != null and historyTag == 2">
                    <!-- 历史热播 -->
                    order by play_count desc
                </when>
                <when test = "newTag != null and newTag == 3">
                    <!-- 最新上线 -->
                    order by create_time desc
                </when>
                <when test = "ratingTag != null and ratingTag == 4">
                    <!-- 最受欢迎 -->
                    order by rating desc
                </when>
            </choose>
        </where>
    </select>
</mapper>


